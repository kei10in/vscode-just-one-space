{
  "name": "just-one-space",
  "displayName": "Just one space",
  "description": "Delete all whitespaces around the cursor, leaving one.",
  "version": "0.0.2",
  "license": "MIT",
  "publisher": "kei10in",
  "homepage": "https://github.com/kei10in/just-one-space#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/kei10in/just-one-space.git"
  },
  "bugs": {
    "url": "https://github.com/kei10in/just-one-space/issues"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:justOneSpace.justOneSpace"
  ],
  "contributes": {
    "commands": [
      {
        "command": "justOneSpace.justOneSpace",
        "title": "Just One Space"
      }
    ],
    "keybindings": [
      {
        "command": "justOneSpace.justOneSpace",
        "key": "alt+space"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.52.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.15.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  }
}
